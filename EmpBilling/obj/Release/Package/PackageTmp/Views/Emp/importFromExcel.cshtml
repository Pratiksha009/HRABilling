
@{

    Layout = "~/Views/Shared/EmpLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h4>Import From Excel</h4>
                </div>

                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @using (Html.BeginForm("importFromExcel", "Emp", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="col-md-3">
                                            <label for="file"><strong id="up-txt"> Upload for Document </strong></label>
                                        </div>
                                        <div class="col-md-7">
                                            <input type="file" name="httpPostedFileBase" id="file" class="form-control" />
                                        </div>
                                        <div class="col-md-2">
                                            <input type="submit" value="Upload" class="btn btn-primary" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <hr />

                    </div>
                </div>


